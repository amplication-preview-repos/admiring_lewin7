datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt     DateTime      @default(now())
  email         String?       @unique
  firstName     String?
  id            String        @id @default(cuid())
  lastName      String?
  password      String
  roles         Json
  updatedAt     DateTime      @updatedAt
  userAddresses UserAddress[]
  username      String        @unique
}

model UserAddress {
  address   String?
  city      String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  order     Int?
  phone     String?
  selected  Boolean?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}
